<mjml>
  <mj-head>
    <mj-title>注册成功！</mj-title>
    <mj-attributes>
      <mj-text line-height="120%"></mj-text>
    </mj-attributes>
    <mj-style inline="inline">
      .header{
      	display:flex;
      	align-items: center;
      }
    </mj-style>
  </mj-head>
  <mj-body>
    <mj-wrapper background-color="#000" border-radius="5px">
      <mj-section css-class="header">
        <mj-column width="40%">
          <mj-image width="150px" src="https://static01.imgkr.com/temp/590385d1399741a8a56f6cb7db7a3b28.jpg"></mj-image>
        </mj-column>
        <mj-column padding="40px 10px">
          <mj-text font-size="45px" align="center" color="#fff">Neofura！</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-divider border-color="orange"></mj-divider>
        </mj-column>
      </mj-section>
      <mj-section padding="0 20px">
        <mj-column>
          <mj-text color="#fff" font-size="16px">Dear User</mj-text>
          <mj-text color="#fff" font-size="16px">You have signed up for the Neofura. Please confirm your email address to continue setup. If you received this by mistake or were not expecting, please disregard this email.</mj-text>
          <mj-spacer height="10px"></mj-spacer>
          <mj-button background-color="orange" href="http://127.0.0.1:8080/#/verifyEmailSuccess/{{email}}">CONFIRM EMAIL ADDRESS</mj-button>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-text color="#fff" font-size="16px" align="center">Copyright © 2022. Neofura All rights reserved.</mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>
